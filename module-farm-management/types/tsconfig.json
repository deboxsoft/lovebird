{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "declaration": true,
    "declarationDir": "./libs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "paths": {}
  },
  "include": ["src"],
  "exclude": ["**/__tests__", "**/__mocks__"]
}
